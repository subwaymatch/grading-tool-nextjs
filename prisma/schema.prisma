// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  anonymousId String     @id @default(cuid())
  netId       String     @unique
  firstName   String
  lastName    String
  admin       Boolean    @default(false)
  class       Class[] //@relation("UserClasses")
  role   UserRole[]
}

enum Role {
  GRADER
  TA
  REVIEWER
  INSTRUCTOR
  STUDENT
}

model UserRole {
  userId String
  role   Role
  user   User   @relation(fields: [userId], references: [anonymousId])

  @@id([userId, role])
}

model Class {
  classId Int @id @default(autoincrement())
  className   String @unique
  school      String
  userProfile User[] //@relation(fields: [userId], references: [anonymousId])
}

model Rubric {
  id Int @id @default(autoincrement())
  
}
